<section>
  <h3 class="font-header font-semibold text-md uppercase mb-6">Presentations and Talks</h3>
  {% for item in projects %}
    <div
    class="border-t-4 border-t-husky-400 dark:border-t-husky-600 border-line relative flex flex-wrap highlight p-4 lg:p-8 bg-no-repeat text-sm mb-6">
      <div class="lg:flex-1">
        <h4 class="font-bold">{{ item.industry }}</h4>
        <p class="w-full py-4">
          {{ item.details }}
        </p>
        <div style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden;">
            <iframe src="{{ item.url }}" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border:0;" allowfullscreen title="YouTube Video"></iframe>
        </div>
      </div>
    </div>
  {% endfor %}
</section>
